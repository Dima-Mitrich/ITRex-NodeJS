{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "no-use-before-define": "off",
        "no-alert": "off",
        "no-console": "off",
        "no-else-return": "off",
        "no-unused-expressions": "off",
        "no-return-assign": "off",
        "no-confusing-arrow": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "always"
            }
        ],
        "no-param-reassign": "off",
        "no-underscore-dangle": "off",
        "max-len": [
            "error",
            {
                "code": 125
            }
        ],
        "no-shadow": "off",
        "class-methods-use-this": "off",
        "max-classes-per-file":"off"
    },
    "ignorePatterns": "__tests__"
}
